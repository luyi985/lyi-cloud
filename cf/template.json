{
    "Resources": {
        "LambdaRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {"Service": "ec2.amazonaws.com"},
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns":[
                    "arn:aws:iam::aws:policy/AWSLambdaExecute"
                ],
                "RoleName": { "Fn::Join": ["", [{"Ref": "AWS::Region"}, "lyi_lambda_role"]] }
            }
        }
    },
    "Outputs": {
        "LambdaRoleArn": {
            "Value": {"Fn::GetAtt": ["LambdaRole", "Arn"]}
        }
    }
}